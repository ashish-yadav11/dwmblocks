+void
+sigdwmblocks(const Arg *arg)
+{
+  static int fd = -1;
+  struct flock fl;
+  union sigval sv;
+
+  if (!dwmblockssig)
+    return;
+  fl.l_type = F_WRLCK;
+  fl.l_whence = SEEK_SET;
+  fl.l_start = 0;
+  fl.l_len = 0;
+  if (fd != -1) {
+    if (fcntl(fd, F_GETLK, &fl) != -1 && fl.l_type == F_WRLCK)
+      goto signal;
+    close(fd);
+    fl.l_type = F_WRLCK;
+  }
+  if ((fd = open(DWMBLOCKSLOCKFILE, O_RDONLY | O_CLOEXEC)) == -1)
+    return;
+  if (fcntl(fd, F_GETLK, &fl) == -1 || fl.l_type != F_WRLCK) {
+    close(fd);
+    fd = -1;
+    return;
+  }
+signal:
+    sv.sival_int = (dwmblockssig << 8) | arg->i;
+    sigqueue(fl.l_pid, SIGRTMIN, sv);
+}
